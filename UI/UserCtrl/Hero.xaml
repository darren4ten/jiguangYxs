<UserControl x:Class="JgYxs.UI.UserCtrl.Hero"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="170"
             Width="116"
             d:DesignHeight="170" d:DesignWidth="116">
    <Grid>
        <Image Name="ImgBackgroundHero" HorizontalAlignment="Left" Height="170"  Width="116" Source="pack://application:,,,/Resources/hero/zhuyuanzhang.jpg" Stretch="Fill"/>
        <TextBlock Name="LblHeroDisplayName" 
                  Text="{Binding CurrentPlayerHero.Hero.DisplayName}"
                   TextAlignment="Center" FontSize="14" FontWeight="Bold" Height="100" MaxHeight="300" TextWrapping="Wrap" Margin="1,30,97,40"></TextBlock>
        <Ellipse Name="FriendMark" HorizontalAlignment="Left" Height="26" Stroke="#803837" VerticalAlignment="Top" Width="26" Fill="#803837" Margin="-2,-2,0,0"></Ellipse>
        <Label Name="LblFriendMark" Content="敌"  Height="32" 
               FontSize="14px" FontWeight="Bold" FontStyle="Oblique"  Margin="-2,-4,94,142"  Foreground="#fff"/>
        <ListView Name="LvEquipment" Width="100" DataContext="{Binding EquipmentSet}" Height="64" Margin="8,76,8,30" Background="Transparent">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel DataContext="{Binding }">
                        <!--<Button Content="{Binding DisplayName}" Foreground="Red"></Button>-->
                        <Label Content="{Binding DisplayName}" FontSize="14" Foreground="Red"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>
        <Image Name="ImgSkillBar" VerticalAlignment="Bottom" Height="22"  Width="116" Source="pack://application:,,,/Resources/element/minCard1png.png" Stretch="Fill" />
        <Image Name="ImgCardNumber" 
               HorizontalAlignment="Left"  Height="32"  Width="24" Margin="-2,138,0,0" 
               Source="pack://application:,,,/Resources/element/minCard1png.png" Stretch="Fill" />
        <Label Name="LblCardNumber"
               HorizontalAlignment="Left"
               Content="{Binding CardsInHand.Count}" 
               Height="32" Width="24" FontSize="16px" FontWeight="Bold" Margin="-2,138,0,0"  Foreground="#6C5237"></Label>
        <Ellipse Name="EllipseCurrentLife" HorizontalAlignment="Right" Height="32" Margin="0,138,0,0" Stroke="#803837" VerticalAlignment="Top" Width="26" Fill="#803837"/>
        <Label Name="LblCurrentLife" 
               HorizontalAlignment="Right"
               Content="{Binding CurrentPlayerHero.CurrentLife}"  
               Height="32" Width="24" FontSize="16px" FontWeight="Bold" Margin="0,138,0,0"  Foreground="#fff"></Label>
        <Image Name="ImgSkill1" HorizontalAlignment="Left"  Height="18"  Width="15" Margin="24,151,0,3" Source="pack://application:,,,/Resources/element/minCard1png.png" Stretch="Fill" />
        <Image Name="ImgSkill2" HorizontalAlignment="Left"  Height="18"  Width="15" Margin="40,151,0,3" Source="pack://application:,,,/Resources/element/minCard1png.png" Stretch="Fill" />
        <Image Name="ImgSkill3" HorizontalAlignment="Left"  Height="18"  Width="15" Margin="56,151,0,3" Source="pack://application:,,,/Resources/element/minCard1png.png" Stretch="Fill" />
        <Image Name="ImgSkill4" HorizontalAlignment="Left"  Height="18"  Width="15" Margin="72,151,0,3" Source="pack://application:,,,/Resources/element/minCard1png.png" Stretch="Fill" />
    </Grid>
</UserControl>
