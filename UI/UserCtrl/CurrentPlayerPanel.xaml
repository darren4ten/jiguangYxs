<UserControl x:Class="WpfApp1.UserCtrl.CurrentPlayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserCtrl"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="700">
    <Grid >
        <local:PlayerHero DataContext="{Binding PlayerHero}" HorizontalAlignment="Left" Height="155" Margin="1,27,0,0" VerticalAlignment="Top" Width="119"/>
        <Button Content="{Binding Path=BtnAction1.BtnText,Mode=TwoWay}"  
                Visibility="{Binding BtnAction1.IsVisible}"
                Click="Btn1Click"
                HorizontalAlignment="Left" Margin="372,150,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="{Binding Path=BtnAction2.BtnText,Mode=TwoWay}" 
                Click="Btn2Click"
                HorizontalAlignment="Left" Visibility="{Binding BtnAction2.IsVisible}" 
                Margin="471,150,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
