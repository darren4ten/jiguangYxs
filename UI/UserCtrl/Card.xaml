<UserControl x:Class="JgYxs.UI.UserCtrl.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="card"
             mc:Ignorable="d" Width="80" Height="110">
    <Grid>
        <Button Click="ButtonBase_OnClick" >
            <Grid>
                <Image Source="pack://application:,,,/Resources/card/card_sha.jpg" Width="78" Height="108" Margin="-2"  Stretch="Fill"/>
                <Label x:Name="LblNumber"
                       Width="28"
                       Height="28"
                       HorizontalAlignment="Left"
                       Content="{Binding card.Number}"
                       Foreground="{Binding card.Color}"
                       FontSize="16px" Margin="-4,-3,0,79" />

                <Label  Width="28"
                        Height="28"
                        x:Name="LblFlower" Content="{Binding card.FlowerKind}" Foreground="{Binding Color}" FontSize="16px" Margin="0,12,46,64"  FontWeight="Bold"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
